# Need to package the code first `tar zcf store.tar.gz $(ls)` and move it to the same directory as Dokerfile
# rpc server source code, used to test rpc methods
FROM golang:1.22-alpine
MAINTAINER zhufuyi "g.zhufuyi@gmail.com"

# go test dependency packages
RUN apk add bash alpine-sdk build-base gcc

COPY . /go/src/store
WORKDIR /go/src/store
RUN tar zxf store.tar.gz
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go mod download
RUN rm -f store.tar.gz

CMD ["sleep","86400"]
